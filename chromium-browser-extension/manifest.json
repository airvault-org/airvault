{
  "manifest_version": 2,
  "name": "Airvault",
  "version": "0.0.1",
  "description": "A simple & secure collaborative passwords manager",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/airvault_16.png",
      "32": "images/airvault_32.png",
      "48": "images/airvault_48.png",
      "64": "images/airvault_64.png",
      "128": "images/airvault_128.png"
    }
  },
  "icons": {
    "16": "images/airvault_16.png",
    "32": "images/airvault_32.png",
    "48": "images/airvault_48.png",
    "64": "images/airvault_64.png",
    "128": "images/airvault_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://code.jquery.com; object-src 'self'"
}
