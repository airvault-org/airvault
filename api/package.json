{
  "name": "airvault-api",
  "version": "0.0.1",
  "description": "Simple collaborative password manager in Node.js",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-files",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -V .sequelizerc .env bin/** dist/",
    "db:reset": "npm run build && node dist/db/scripts/reset.js && npm run db:migrate && npm run db:seed",
    "db:migrate": "(cd dist && sequelize db:migrate)",
    "db:seed": "(cd dist && sequelize db:seed:all)",
    "prestart": "npm run db:migrate",
    "start": "npm run build && node dist/bin/www",
    "test": "NODE_ENV=test mocha --recursive --file test/test-helpers.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jbuget/airvault.git"
  },
  "keywords": [
    "collaborative",
    "password",
    "manager",
    "node.js"
  ],
  "author": "Jérémy Buget",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/jbuget/airvault/issues"
  },
  "homepage": "https://github.com/jbuget/airvault#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.6.0",
    "fastify": "^3.18.0",
    "fastify-auth": "^1.1.0",
    "fastify-cors": "^5.2.0",
    "fastify-formbody": "^5.0.0",
    "fastify-helmet": "^5.3.1",
    "fastify-plugin": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "oauth2-server": "^3.1.1",
    "pg": "^8.6.0",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "typescript": "^4.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^15.12.4",
    "@types/oauth2-server": "^3.0.12",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.4",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "mocha": "^8.4.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4"
  }
}
