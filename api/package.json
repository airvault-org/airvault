{
  "name": "password-manager-api",
  "version": "0.0.1",
  "description": "Simple collaborative password manager in Node.js",
  "main": "index.js",
  "scripts": {
    "db:reset": "node db/scripts/reset.js && npm run db:migrate && npm run db:seed",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "start": "node bin/www",
    "test": "NODE_ENV=test mocha --recursive --file test/test-helpers.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jbuget/password-manager.git"
  },
  "keywords": [
    "collaborative",
    "password",
    "manager",
    "node.js"
  ],
  "author": "Jérémy Buget",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/jbuget/password-manager/issues"
  },
  "homepage": "https://github.com/jbuget/password-manager#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "fastify": "^3.9.2",
    "fastify-auth0-verify": "^0.4.0",
    "fastify-helmet": "^5.0.3",
    "fastify-jwt": "^2.2.0",
    "pg": "^8.5.1",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0"
  },
  "devDependencies": {
    "mocha": "^8.2.1",
    "sinon": "^9.2.2"
  }
}
